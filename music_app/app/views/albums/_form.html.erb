<% if  type== :edit%>
    <% title ='Update Album' %>
<% end %>
<h1><%= title %> for
    <%= band.name %>
</h1>
<form action='<%= albums_url %>' method="post">
    <% if type== :edit %>
        <input type="hidden" name='authenticity_token' value='<%= form_authenticity_token %>'>
    <% end %>

    <label for="title">Title
        <input type="text" name=album[title]>
    </label>
    <label for="year">Year
        <input type="number" min="1950" max="2020" name=album[year]>
    </label>
    <label for="studio?">Album Type
        <select name="album[studio?]">
            <option value="true">Studio</option>
            <option value="false">Live</option>
        </select>
    </label>
    <input type="hidden" name='album[band_id]' value='<%= band.id %>'>
    <input type="submit" value=<%= title %>> 
</form>