<% if flash.now[:errors] %>
<% flash.now[:errors].each do |error| %>
<p>
    <%= error %>
</p>
<% end %>
<% end %>
<h2>Add New Band</h2>
<form action=" <%= bands_url  %>" method='post'>
    <input type="hidden" name='authenticity_token' value='<%= form_authenticity_token %>'>
    <label for="name">
        <input type="text" name='band[name]'>
    </label>
    <input type="submit" value='Add band!'>
</form>